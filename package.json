{
  "name": "mcp-infrastructure",
  "version": "1.0.0",
  "private": true,
  "description": "Unified MCP infrastructure for all projects",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "pnpm -r build",
    "dev": "pnpm -r --parallel dev",
    "test": "pnpm -r test",
    "lint": "pnpm -r lint",
    "clean": "pnpm -r clean && rm -rf node_modules",
    "publish:all": "pnpm -r publish"
  },
  "keywords": [
    "mcp",
    "infrastructure",
    "ai",
    "automation"
  ],
  "author": "libao",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.11.0",
    "typescript": "^5.3.3",
    "tsx": "^4.7.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}